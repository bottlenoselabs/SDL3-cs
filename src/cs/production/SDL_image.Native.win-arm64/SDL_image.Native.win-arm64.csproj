<Project Sdk="Microsoft.NET.Sdk">

  <!-- Native Library -->
  <PropertyGroup>
    <RuntimeIdentifier>win-arm64</RuntimeIdentifier>
    <PlatformTarget>arm64</PlatformTarget>
    <NativeLibraryFileName>SDL3_image.dll</NativeLibraryFileName>
  </PropertyGroup>
  <Import Project="../NativeLibrary.props" />

  <!-- MSBuild settings -->
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <!-- NuGet -->
  <PropertyGroup>
    <PackageDescription>The native `SDL_image` library (SDL3_image) file (SDL3_image.dll) for the `win-arm64` target framework moniker (TFM).</PackageDescription>
  </PropertyGroup>

</Project>
