<Project Sdk="Microsoft.NET.Sdk">

  <!-- Native Library -->
  <PropertyGroup>
    <RuntimeIdentifier>linux-x64</RuntimeIdentifier>
    <PlatformTarget>x64</PlatformTarget>
    <NativeLibraryFileName>libSDL3_image.so</NativeLibraryFileName>
  </PropertyGroup>
  <Import Project="../NativeLibrary.props" />

  <!-- MSBuild settings -->
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <!-- NuGet -->
  <PropertyGroup>
    <PackageDescription>The native `SDL_image` library (SDL3_image) file (libSDL3_image.so) for the `linux-x64` target framework moniker (TFM).</PackageDescription>
  </PropertyGroup>

</Project>
